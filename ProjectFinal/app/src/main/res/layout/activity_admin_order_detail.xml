<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.admin.AdminOrderDetailActivity"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txtOrderDetailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: 1"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imdOrderDetailBookImg"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/book1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtOrderDetailBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harry Potter"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtOrderDetailBookNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng: 1"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtOrderDetailBookPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 180,000 đ"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtOrderDetailTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 200,000 đ"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtOrderDetailStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Đã nhận"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người đặt hàng"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtOrderDetailUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên: Nhân"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtOrderDetailUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: abc@gmail.com"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtOrderDetailUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 0971234567"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txtOrderDetailUserAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: 123 đường Minh Khai"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOrderAccept"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chấp nhận"
            android:layout_marginRight="20dp"
            android:backgroundTint="@android:color/holo_green_dark"/>

        <Button
            android:id="@+id/btnOrderReject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Từ chối"
            android:layout_marginRight="20dp"
            android:backgroundTint="@android:color/holo_red_dark"/>
    </LinearLayout>
</LinearLayout>