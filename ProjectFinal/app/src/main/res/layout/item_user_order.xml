<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: 1"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_order_bookimg"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/book1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_order_bookname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harry Potter"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/item_order_booknumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/item_order_bookprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="18000 đ"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/item_order_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 20000 đ"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/item_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đã nhận"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>